  --base-padding 1rem
  --gap calc(var(--base-padding) * 2)
  --content-width calc(70rem + var(--gap))

  --color-blue-light #098FCF
  --color-blue-dark #043C77
  --color-white #ffffff
  --color-black #000000
  --color-grey #565656
  --color-bg #F9F9F9

  --table-border #E7E7E7
  --input-border #d4d4d4

  --shadow 0px 4px 30px rgba(0, 0, 0, 0.1)

  --icon-tel url(../images/svg-sprites/common.svg#tel)
  --icon-login url(../images/svg-sprites/common.svg#login)

  --icon-checkbox url(../images/svg-sprites/common.svg#checkbox)

  --icon-request url(../images/svg-sprites/common.svg#request)
