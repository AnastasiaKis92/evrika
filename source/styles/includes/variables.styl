  --icon-price url(../images/svg-sprites/common.svg#price)
  --icon-way url(../images/svg-sprites/common.svg#way)

  --icon-arrow url(../images/svg-sprites/common.svg#arrow)
  --icon-arrow-link url(../images/svg-sprites/common.svg#arrow-link)
