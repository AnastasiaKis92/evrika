.page-section
  position relative
  padding 3.125rem 0
  &--header
    padding 1rem 0
  &--nav
    margin-bottom 2.5rem
    padding 0
    background-color var(--color-bg)
  &--footer
    padding 0 0 2rem
  &--costs
    padding-bottom 1.875rem
  &--certificates
    padding-bottom 1.875rem
  &--questions
    margin-top -6.25rem
    padding-bottom 4rem
  @media (max-width point-m)
    padding 2rem 0 2rem
    &--header
      padding 1rem 0
    &--nav
      margin-bottom 0
      padding 0
    &--footer
      padding 0 0 2rem
    &--questions
      margin-top -4rem
  &--bg
    &::before
      content ''
      position absolute
      left 0
      right 0
      top 3.125rem
      bottom 3.125rem
      width 100%
      background-color var(--color-bg)
      z-index -1
      @media (max-width point-m)
        top 2rem
        bottom 2rem
    &-blue
      color var(--color-white)
      text-align center
      &::before
        background-color var(--color-blue-dark)
