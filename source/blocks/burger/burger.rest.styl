.burger
  right 0
  z-index 10
  width 25px
  height 20px
  padding 0
  background-color transparent
  cursor pointer
  border none

.burger__inner
.burger__inner::before
.burger__inner::after
  width 100%
  height 1.5px
  background-color var(--color-black)
  transition 0.3s

.burger__inner
  top 10px
  &::before
    content ''
    top -10px
    transition top 0.3s 0.3s, transform 0.3s
  &::after
    content ''
    bottom -10px
    transition bottom 0.3s 0.3s, transform 0.3s

.burger__inner.active::before
  content ''
  top 0px
  transform rotate(45deg)
  transition top 0.3s, transform 0.3s 0.3s

.burger__inner.active::after
  content ''
  bottom 0
  transform rotate(-45deg)
  transition bottom 0.3s, transform 0.3s 0.3s

.burger__inner.active
  background 0 0
