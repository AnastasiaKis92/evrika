.nav
  &__link
    &--sublist
      &::after
        top 50%
        transform translateY(-50%)
        right 5px
        width 15px
        height 7px
        mask-image var(--icon-arrow)
        mask-repeat no-repeat
        mask-size cover
        background-color var(--color-black)
    &--burger
      @media(min-width point-s)
        display none

@media(max-width point-m - 1)
  .nav
    width 100%
    height 100vh
    left -100%
    background-color var(--color-bg)
    z-index 10
    transition-duration 0.2s
    &.animate
      left 0
      height 100vh
      transition left 0.3s 0.3s
    &__link--sublist
      &::after
        right auto
        margin-left 0.5rem
