.header
  &__link-tel
    &::before
      top 3px
      left -40px
      width 2rem
      height 2rem
      mask-image var(--icon-tel)
      mask-repeat no-repeat
      background-color var(--color-black)
  &__button
    &::before
      left 12px
      width 2rem
      height 2rem
      mask-image var(--icon-login)
      mask-repeat no-repeat
      mask-size contain
      background-color var(--color-white)
