.button
  font-family 'Montserrat', 'Helvetica-Neue', 'Arial', sans-serif
  color var(--color-white)
  text-decoration none
  text-align center
  background-color var(--color-blue-light)
  border none
  appearance none
  transition background-color var(--transition-duration-out), color var(--transition-duration-out)
  &:hover
    transition-duration var(--transition-duration-in)
    @media (min-width point-l)
      background-color var(--color-blue-dark)

// Swiper Navigation
.swiper-button-prev
.swiper-button-next
  background-color var(--color-white)
  top 28px
  @media (max-width point-m)
    top 70px
  @media (max-width point-s)
    top 100px
  &.swiper-button-next
    transform rotate(180deg)
  &.swiper-button-prev
    right 4.5rem
    left auto
  &::after
    content ''
    align-center()
    width 30px
    height 16px
    mask-image var(--icon-arrow-btn)
    mask-repeat no-repeat
    background-color var(--color-black)
  transition background-color var(--transition-duration-out)
  &:hover
    transition-duration var(--transition-duration-in)
    @media (min-width point-l)
      background-color var(--color-blue-light)
